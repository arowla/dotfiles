[alias]
	st = status -s
    sth = stash
	du = diff
	ds = diff --staged
	co = checkout
	ci = commit
	cp = cherry-pick
    db = diff master..HEAD --ignore-space-change
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lb = log master.. --pretty=oneline

